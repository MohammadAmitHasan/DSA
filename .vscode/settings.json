{
  "editor.fontFamily": "Fira Code, Jetbrains Mono, Consolas",
  "editor.fontLigatures": true,
  "editor.quickSuggestions": {
    "comments": "off",
    "strings": "off",
    "other": "off"
  },
  "editor.minimap.enabled": false,
  "window.zoomLevel": 0,
  // "files.autoSaveDelay": 1000,
  // "files.autoSave": "afterDelay",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "workbench.colorTheme": "Night Owl (No Italics)",
  "code-runner.runInTerminal": false, //run in same terminal
  "code-runner.saveFileBeforeRun": true,
  "C_Cpp.default.cppStandard": "c++20",
  "C_Cpp.default.cStandard": "c17",
  "C_Cpp.errorSquiggles": "enabled",
  "python.formatting.provider": "autopep8",
  "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 0}",
  "code-runner.executorMap": {
    "cpp": "cd $dir && g++ $fileName -o $fileNameWithoutExt.exe && $dir$fileNameWithoutExt.exe < input.txt > output.txt",
    "python": "python -u $fullFileName"
  },
  "files.associations": {
    "iostream": "cpp",
    "ostream": "cpp",
    "iomanip": "cpp"
  }
}
